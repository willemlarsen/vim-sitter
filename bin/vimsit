#!/usr/bin/env ruby
$: << File.dirname(__FILE__)+'/../lib'

require 'vim_sitter'

include VimSitter

def exit_with message
  puts "Error #{message}!"
  exit -1
end

exit_with "Missing 'Vim'" unless System.vim_installed?
exit_with "Missing 'git'" unless System.git_installed?

dir = VimDir.new

dir.create_autoload
dir.create_bundle
dir.create_swap
dir.create_backup
dir.create_undo

Pathogen.install



